root = true

# Общие настройки для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 150

# Настройки для JavaScript / TypeScript / JSX / TSX
[*.{js,ts,jsx,tsx}]
quote_type = single
indent_size = 2
insert_final_newline = true

# Настройки для HTML / XML
[*.{html,xml}]
indent_size = 2

# Настройки для CSS / SCSS / LESS
[*.{css,scss,less}]
indent_size = 2
end_of_line = lf

# Настройки для JSON / JSONC
[*.{json,jsonc}]
indent_size = 2
trim_trailing_whitespace = false

# Настройки для Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off